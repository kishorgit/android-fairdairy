<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/robotoCalendarDateTitleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="#F0FFF0"
    >

    <TextView
        android:id="@+id/rightButton"
        style="@style/RobotoCalendarMonthArrow"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/monthText"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:textColor="@color/black_color"
        android:layout_marginLeft="15dp"/>
    <!--android:layout_width="wrap_content"-->
    <TextView
        android:id="@+id/monthText"
        style="@style/RobotoCalendarMonthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:tag="dateTitle"
        android:text="MONTH YEAR"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black_color"/>

    <TextView
        android:id="@+id/leftButton"
        style="@style/RobotoCalendarMonthArrow"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/monthText"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:textColor="@color/black_color"
        />

</RelativeLayout>